pipeline{
    agent {label 'masternodes'}
	stages {
	    stage("Env Variables") {
	        steps{
	            parallel(
	                    a: {
	                      sh ' echo  Current Date and Time is $(date) > CurentDate.txt '
	                    },
	                    b: {
	                        echo "The ${JOB_NAME} job running on agent ${NODE_NAME}"
			    },
			    c: {
			    	echo "mail id= ${VAR_EMAIL}"
			    }
	                )         
	            }
	        }
	    }
	}

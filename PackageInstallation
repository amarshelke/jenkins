def servicename = env.service_name = "sshd"
def servername = env.server_name = "192.168.43.28"


pipeline{
    agent {label 'masternodes'}
    stages{
        stage("Service"){
            steps{
                sh "ssh jenkins@${servername} | 'sudo systemctl status $servicename ; exit 0 '"
            }
        }
    }
}

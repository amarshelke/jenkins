def servicename = env.service_name = "sshd"
def servername = env.server_name = "jenkins@192.168.43.28"


pipeline{
    agent {label 'masternodes'}
    stages{
        stage("Service"){
            steps{
                 sh ' ssh "$server_name" '
                sh  "'sudo systemctl status $servicename ; exit 0 '"
            }
        }
    }
}
